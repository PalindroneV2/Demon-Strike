		PlaySound(1000, "misc/chat", CHAN_5, 1.0, FALSE, 0);
		HudMessage(s:"Give the bastards a surprise and wipe them out."; HUDMSG_PLAIN, 1, CR_WHITE, 0.5, 0.8, 2.0);
