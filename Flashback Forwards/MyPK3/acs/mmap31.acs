		PlaySound(1000, "misc/chat", CHAN_5, 1.0, FALSE, 0);
		HudMessage(s:"This must be their control station for the containment cells."; HUDMSG_PLAIN, 1, CR_WHITE, 0.5, 0.8, 2.0);
		Delay(105);
		PlaySound(1000, "misc/chat", CHAN_5, 1.0, FALSE, 0);
		HudMessage(s:"This part of the facility should be deep enough that the monsters can't get out."; HUDMSG_PLAIN, 1, CR_WHITE, 0.5, 0.8, 2.0);
